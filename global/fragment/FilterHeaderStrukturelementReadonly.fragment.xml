<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:mvc="sap.ui.core.mvc">

    <FlexBox
        alignItems="Center"
        justifyContent="Start">
        <FlexBox
            visible="{= !${global>/bRoleSbMil} &amp;&amp; !${global>/bRoleSbZiv} }"
            direction="Column"
            alignItems="Start"
            justifyContent="SpaceBetween"
            class="sapUiSmallMarginEnd">
            <HBox>
                <ObjectAttribute
                    title="Planungssituation"
                    text="{global>/sPlanungssituationTitel} ({global>/sPlanungssituationId})" />
                <ObjectStatus
                    visible="{= !${global>/bRoleSbMil} &amp;&amp; !${global>/bRoleSbZiv} }"
                    inverted="true"
                    class="objectStatus sapUiSmallMarginBegin"
                    text="{
                    path: 'global>/sPlanungssituationStatus',
                    formatter: '.formatter.getMeldungStatusString',
                    templateShareable : false
                }"
                    state="{
                    path: 'global>/sPlanungssituationStatus',
                    formatter: '.formatter.getMeldungStatus',
                    templateShareable : false
                }" />
            </HBox>
            <ObjectAttribute
                title="Beurteilungsstichtag"
                text="{global>/sPlanungssituationBeurteilungsstichtag}" />
        </FlexBox>

    </FlexBox>
    <ObjectAttribute
        title="Berechtigtes Strukturelement"
        text="{global>/sStrukturelementText} ({global>/sStrukturelementId})  -  {global>/sRollename}" />

</core:FragmentDefinition>   