<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <OverflowToolbarButton
      class="sapUiTinyMarginBegin"
      press="onOpenFirstDependentPress"
      icon="sap-icon://legend"
      type="Transparent"
      tooltip="Legende zu Leistungssicht anzeigen">
      <dependents>
         <Popover
            showHeader="false"
            placement="VerticalPreferredBottom"
            contentHeight="150px"
            contentWidth="340px">
            <VBox width="200px">
               <HBox height="35px">
                  <core:Icon
                     src="sap-icon://circle-task-2"
                     color="#2b7c2b"
                     class="sapUiSmallMargin"
                     width="1.2rem"
                     tooltip="Erbrachte Leistung &gt; 80%" />
                  <Label
                     text="Erbrachte Leistung &gt; 80%"
                     width="250px"
                     class="sapUiSmallMargin" />
               </HBox>
               <HBox height="35px">
                  <core:Icon
                     src="sap-icon://project-definition-triangle-2"
                     color="#e78c07"
                     class="sapUiSmallMargin"
                     width="1.2rem"
                     tooltip="Erbrachte Leistung 60% bis 80%" />
                  <Label
                     text="Erbrachte Leistung 60% bis 80%"
                     width="250px"
                     class="sapUiSmallMargin" />
               </HBox>
               <HBox height="35px">
                  <core:Icon
                     src="sap-icon://color-fill"
                     color="#bb0000"
                     class="sapUiSmallMargin"
                     width="1.2rem"
                     tooltip="Erbrachte Leistung &lt; 60%" />
                  <Label
                     text="Erbrachte Leistung &lt; 60%"
                     width="250px"
                     class="sapUiSmallMargin" />
               </HBox>
               <HBox height="35px">
                  <core:Icon
                     src="sap-icon://circle-task"
                     color="#a1aab1"
                     class="sapUiSmallMargin"
                     width="1.2rem"
                     tooltip="Beurteilung/Anmerkung in Vorbereitung" />
                  <Label
                     text="Beurteilung/Anmerkung in Vorbereitung"
                     width="250px"
                     class="sapUiSmallMargin" />
               </HBox>
            </VBox>
         </Popover>
      </dependents>
   </OverflowToolbarButton>
</core:FragmentDefinition>