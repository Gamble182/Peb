<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns:f="sap.f"
    height="100%"
>
    <f:GridListItem
        class="GridListItemRadius"
        type="Navigation"
    >
        <VBox
            height="100%"
            width="100%"
            justifyContent="SpaceBetween"
        >
            <layoutData>
                <FlexItemData
                    growFactor="1"
                    shrinkFactor="0"
                />
            </layoutData>

            <VBox
                class="sapUiSmallMargin"
                height="100%"
                width="100%"
            >
                <HBox
                    justifyContent="SpaceBetween"
                    class="sapUiSmallMarginBottom"
                >
                    <Title
                        level="H2"
                        text="{Handlungsfeldkategorie_Text}"
                        wrapping="false"
                    />
                </HBox>

                <mc:ComparisonMicroChart
                    scale=""
                    minValue="0"
                    maxValue="14"
                    size="Responsive"
                    width="90%"
                    data="{ path: 'to_Unterkategorien', templateShareable : false}"
                    colorPalette="sapUiChartPaletteSequentialHue1"
                >
                    <mc:data>
                        <mc:ComparisonMicroChartData
                            title="{HandlungsfeldUnterkategorie_Text}"
                            value="{Anzahl}"
                        />
                    </mc:data>
                </mc:ComparisonMicroChart>
            </VBox>
        </VBox>
    </f:GridListItem>
</core:FragmentDefinition>
